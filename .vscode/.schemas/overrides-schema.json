{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"type": "object",
	"patternProperties": {
		"^.+$": {
			"type": "object",
			"patternProperties": {
				"^.+$": {
					"type": "object",
					"properties": {
						"actor": {
							"type": "string",
							"description": "Path or URL to the actor image"
						},
						"token": {
							"type": "object",
							"description": "Token configuration overrides",
							"properties": {
								"randomImg": {
									"type": "boolean",
									"default": false,
									"description": "Whether to randomize token image"
								},
								"texture": {
									"type": "object",
									"description": "Texture settings for token",
									"properties": {
										"src": {
											"type": "string",
											"description": "Path or URL to the texture image"
										},
										"scaleX": {
											"type": "number",
											"default": 1.0,
											"description": "Optional horizontal scale"
										},
										"scaleY": {
											"type": "number",
											"default": 1.0,
											"description": "Optional vertical scale"
										}
									},
									"additionalProperties": false
								},
								"ring": {
									"type": "object",
									"description": "Token ring settings",
									"properties": {
										"enabled": {
											"type": "boolean",
											"default": false,
											"description": "Enable or disable the ring"
										},
										"subject": {
											"type": "object",
											"description": "Settings for ring subject",
											"properties": {
												"texture": {
													"type": "string",
													"description": "Path or URL to the subject texture"
												},
												"scale": {
													"type": "number",
													"default": 1.0,
													"description": "Scale factor for subject texture"
												}
											},
											"additionalProperties": false
										}
									},
									"additionalProperties": false
								}
							},
							"additionalProperties": false
						}
					},
					"required": ["actor"],
					"additionalProperties": false
				}
			},
			"additionalProperties": false
		}
	},
	"additionalProperties": false
}
